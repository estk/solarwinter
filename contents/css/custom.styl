black = #222

font-size = 12px

font = font-size 'Helvetica', serif

clearfix()
  content: ".";
  display: block;
  clear: both;
  visibility: hidden;
  line-height: 0;
  height: 0;

border-radius(n)
  -webkit-border-radius n
  -moz-border-radius n
  border-radius n

 box-shadow(args...)
   -webkit-box-shadow args
   -moz-box-shadow args
   box-shadow args


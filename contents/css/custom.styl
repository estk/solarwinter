blue = #001436
lblue = #a2b5cb
yellow = #ffdf85
orange = #fc8f46
red = #a63e1a
grey = #666
lgrey = #999
black = #000

font-size = 15px

font = font-size 'Garaamond', serif

border-radius(n)
  -webkit-border-radius n
  -moz-border-radius n
  border-radius n

 box-shadow(args...)
   -webkit-box-shadow args
   -moz-box-shadow args
   box-shadow args

body
  font font
  letter-spacing 1px
  line-height 120%
  color: blue
  
a
  color: orange

header#menubar
  z-index 100
  width 100%
  position fixed
  height 50px
  display block
  background: rgba(255,255,255,1)  
  top 0
  left 0
  border-bottom 1px solid #ddd;
  box-shadow 0 0 4px #eee;

#logo
  z-index 100
  width 200px
  height 50px
  float:left
  display inline-block
  margin 15px 25px 5px
  border-left none

.inner
  margin 1em 1em

nav
  min-width 500px
  //padding 1.5em
  float left
  height 50px
  z-index: 100;
  
    
nav a
  vertical-align: middle
  line-height 50px
  font-size: 12px
  color grey
  &:hover
    text-decoration none
  margin: 0 5px;
  padding-right: 15px;
  border-right: 1px dotted #eee;

nav a:last-child {
  border-right: none;
}

nav a.active {
  color orange
}

#fb
  height 50px
  padding 1.2em
  float right
  display inline-block
  img
    height 21px
    

h2
  //font-color #000
  color orange

p
  width 67%
  margin 0 auto 0 0

#content
  display block
  max-width 1440px
  margin 0 auto



.imgcontainer
  position relative
  padding-bottom 56.25%
  overflow hidden
  img
    position absolute
    top 0
    left 0
    max-width 100%
    height auto

:target
  padding-top 50px

.container
  width 80%
  margin 0 auto
  img
    max-width 100%
    margin 2em 0

article.post
  padding 1em 0
  margin 1em 0 1em

.photoset
  height 220px
  width: 450px
  overflow-x scroll;
  overflow-y hidden;
  white-space nowrap
  margin 10px 0
  padding 5px
  background: black
  border-radius(5px)
  display inline-block
  //max-width 100%

.photoset a
  text-decoration: none

.photoset a img
  margin 5px
  min-width 133px
  height 200px

.team
  article
    margin 2em 0
  p
    float left
  div
    margin -2.5em 30px
    float right
    height 197px
    width 148


div.title
  margin-top 2em
  margin-bottom 4em
  vertical-align middle
  display block
  width 100%
  clear both
  font-size 22pt
  position relative

  hr
    margin 0
    border 0
    background-color black
    height 3px

  span
    margin 10%
    color orange
    line-height 70px
    vertical-align middle

#slides
  //position relative
  //height 0
  //overflow hidden
  display none

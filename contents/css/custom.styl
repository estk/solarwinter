  h2
    font-size 22pt  
    color blue

.partner
  text-align center
  padding 0 15%
  border-bottom 2px solid
  height 160px
  font 25pt 'Helvetica Light', sans-serif  
  width 100%
  img
    text-align center
    max-height 125px
    max-width 200px
    margin auto 0
    vertical-align: middle

.partners
  margin-top 4em
  color black
